{
  "name": "@yk-takemoto/translate-adapter",
  "version": "0.1.0",
  "description": "Translate adapter for TypeScript",
  "main": "lib/bundle.cjs.js",
  "module": "lib/bundle.esm.js",
  "browser": "lib/bundle.umd.js",
  "files": [
    "./lib"
  ],
  "scripts": {
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "lint": "eslint",
    "test": "node --test -r tsconfig-paths/register --require ts-node/register ./tests/**/test_*.ts",
    "compile": "rm -r lib/* && tsc && npx rollup -c && tsc-alias",
    "build": "yarn format && yarn lint && yarn compile",
    "full": "yarn format && yarn lint && yarn test && yarn compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yk-takemoto/translate-adapter-ts"
  },
  "author": "Yukihiro Takemoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yk-takemoto/translate-adapter-ts/issues"
  },
  "homepage": "https://github.com/yk-takemoto/translate-adapter-ts#readme",
  "dependencies": {
    "deepl-node": "^1.15.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^18.18.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "rollup": "^4.30.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
